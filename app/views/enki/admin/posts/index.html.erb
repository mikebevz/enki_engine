<h1>Your posts</h1>
<table>
  <thead>
    <tr>
      <th>Published At</th>
      <th>Title</th>
      <th>Excerpt</th>
      <% if comments? -%><th>Comments</th><% end -%>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if @posts.empty? -%>
      <tr><td colspan="5">There are no posts at this time.</td></tr>
    <% else -%>
      <%= render :partial => 'post', :collection => @posts %>
    <% end -%>
  </tbody>

</table>

<div class="pagination">
    <%= paginate @posts %>
</div>
